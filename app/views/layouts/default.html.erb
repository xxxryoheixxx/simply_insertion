    <title>ESTA登録代行 <%= @title %></title>
    <%= stylesheet_link_tag "style.css", :media => :all %>
  </head>
  <body>
    <div id="content">
      <div id="flow">
        <ul class="clearfix">
          <li<%= " class='select'" if @select == "new" %>>申し込み</li>
